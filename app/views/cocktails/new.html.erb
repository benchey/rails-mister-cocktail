<div class="banner" style="background-image: linear-gradient(rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1532117182044-031e7cd916ee?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=5a43e535965d62203250faaa661182db&auto=format&fit=crop&w=800&q=80')">

  <div class="banner-content">
    <h1>Add a new cocktail</h1>
    <div class="add-cocktail form-inline">
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name, label: false %>
        <%= f.submit "Add a cocktail", class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>


